<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/layout/custom_game/spell_shop/spell_shop.css" />
	</styles>

	 <scripts>
		<include src="s2r://panorama/layout/custom_game/spell_shop/spell_shop.js" />
	</scripts>  

	<Panel class="SpellShopMain" hittest="false">
        <Panel class="SpellMapPanel" id="SpellMapPanel">
            <Panel class="SpellButtonOpen" id="SpellButtonOpen" onactivate="OpenSpellShop();">
                <Panel class="SpellButtonOpenIcon" />
            </Panel>
            <Panel class="SpellButtonOpenTroll" id="SpellButtonOpenTroll" onactivate="OpenSpellShoTroll();">
                <Panel class="SpellButtonOpenIconTroll" />
            </Panel>
            <Panel class="ActivatedSpell" id="ActivatedSpell1">
                <Panel class="ActivatedSpellIcon" id="ActivatedSpellIcon1" />
            </Panel>
            <Panel class="ActivatedSpell" id="ActivatedSpell2">
                <Panel class="ActivatedSpellIcon" id="ActivatedSpellIcon2" />
            </Panel>
            <Panel class="ActivatedSpell" id="ActivatedSpell3">
                <Panel class="ActivatedSpellIcon" id="ActivatedSpellIcon3" />
            </Panel>
        </Panel>
        <Panel class="SpellShopPanel CloseSpellShop" id="SpellShopPanel">
            <Panel class="SpellShopHeader">
                <Label class="SpellShopHeaderLabel" text="#SpellShop_Name" />
                <Panel class="CloseSpellShopButton" onactivate="CloseSpellShop();"/> 
            </Panel>
            <Panel class="SpellShopPanelBody">
                <Panel class="SpellShopSpellsList">
                    <Label class="SpellShopSpellsListChoose" text="#SpellShop_ChooseSpell"/>
                    <Panel class="SpellShopSpellsListBody" id="SpellShopSpellsListBody" />
                    <Panel class="SpellShopPanelBuy">
                        <Panel class="UnlockPanelBuy">
                            <Panel class="UnlockPanelBuyButton" id="UnlockPanelBuyButton" onactivate="BuyRandomSpell();">
                                <Label class="UnlockPanelBuyButtonLabel" text="#SpellShop_Buy"/>
                            </Panel>
                            <Panel class="UnlockPanelBuyButtonCost">
                                <Panel class="UnlockPanelBuyButtonCostIcon" />
                                <Label class="UnlockPanelBuyButtonCostLabel" id="UnlockPanelBuyButtonCostLabel" text="0" />
                            </Panel>
                        </Panel>
                        <Label class="UnlockPanelBuyButtonDescription" text="#SpellShop_DescriptionBuy" />
                    </Panel>
                </Panel>
                <Panel class="PreviewSpellInfo" id="PreviewSpellInfo">
                    
                </Panel>
            </Panel>
        </Panel>
	</Panel>
</root>
<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/layout/custom_game/choose_help_side/choose_help_side.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/layout/custom_game/choose_help_side/choose_help_side.js" />
	</scripts>
    <Panel class = "ChooseHelpPanel" hittest="false">
        <Panel id = "ChooseHelpContainer" class ="ChooseHelpContainer">
            <Label text = "Choose your side:" class = "ChooseHelpLabel"/>
            <Panel class ="ChooseHelpButtons">
                <Button class ="ChooseButton ElfButton" onactivate="ChooseSide(2)"><Label text="Elf!" /></Button>
                <Button class ="ChooseButton TrollButton" onactivate="ChooseSide(3)"><Label text="Troll!" /></Button>
            </Panel>
        </Panel>
        <Panel id = "ChooseHelpContainer2" class ="ChooseHelpContainer2">
            <Label text = "You CAN leave the game." class = "ChooseHelpLabel"/>
        </Panel>
    </Panel>
</root>
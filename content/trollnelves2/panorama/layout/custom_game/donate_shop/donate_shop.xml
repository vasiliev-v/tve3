<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/layout/custom_game/donate_shop/donate_shop.css" />
	</styles>
	<scripts> 
        <include src="s2r://panorama/layout/custom_game/donate_shop/shop_config.js" />
		<include src="s2r://panorama/layout/custom_game/donate_shop/donate_shop.js" />
	</scripts>
	<Panel hittest="false" style="width:100%;height:100%;">
		<Panel id="DonateShopPanel" class="DonateShopPanel">
            <Panel id="DonateShopTopPanel"> 
				<Panel class="DonateShopTopButtons" id="DonateShopTopButtons"> 
					<Panel class="DonateMenuButton" onactivate="SwitchTab('MainContainer', 'DonateMainButton');" id="DonateMainButton"> 
                        <Label text="#shop_main" class="ButtonText" /> 
                    </Panel>
					<Panel class="DonateMenuButton" onactivate="SwitchTab('ItemsContainer', 'DonateItemsButton');" id="DonateItemsButton"> 
                        <Label text="#shop_items" class="ButtonText" /> 
                    </Panel>
					<Panel class="DonateMenuButton InventoryButton" onactivate="SwitchTab('InventoryContainer', 'DonateInventoryButton');" id="DonateInventoryButton"> 
                        <Label text="#shop_inventory" class="ButtonText" /> 
                    </Panel>
					<Panel id="TrollChance" class="TrollChance">
						<Panel class="TrollIcon" />
					</Panel>
					<Panel id="BonusRate" class="BonusRate">
						<Panel class="BonusRateIcon" />
					</Panel>
                    <Panel id="BattlePassButton" class="BattlePassButton">
                        <Panel class="BattlePassButtonIcon" />
                    </Panel>
				</Panel>
				<Panel class="DonateShopTopCurrency"> 
					<Panel class="DonateShopCurrencyMain">
						<Panel class="DonateShopCurrency">
							<Label id="Currency" text="0" class="GoldText" />
							<Panel class="DonateShopGiveDonate">
								<Panel class="PlusLabel" onactivate="BuyCurrencyPanelActive();"/>
							</Panel>
						</Panel>
						<Panel class="CurrencyIconMain" />
					</Panel>
					<Panel class="DonateShopCurrencyMain SecondCurrency">
						<Panel class="DonateShopCurrency">
							<Label id="Currency2" text="0" class="GoldText" />
                            <Panel class="DonateShopGiveDonate">
								<Panel class="PlusLabel" onactivate="BuyCurrencyPanelActive();"/>
							</Panel>
						</Panel>
						<Panel class="CurrencyIconMain" />
					</Panel>
				</Panel>
				<Panel class="CloseShop" onactivate="ToggleShop();"/>
			</Panel>
			<Panel id="MainContainer" class="DonateShopPanelMain">
				<Panel id="PopularityRecomDonate" class="PopularityRecomDonate">
					<Label text="#shop_recomended" class="PopularityRecomDonateInfo" id="PopularityRecomDonateInfo"/>
					<Panel id="PopularityRecomDonateItems" class="PopularityRecomDonateItems" />
				</Panel>
				<Panel class="PopularityDonate">
					<Panel class="ADSContainer"> 
						<Panel id="AdsChests" class="ADSImage" onactivate="SwitchTab('ItemsContainer', 'DonateItemsButton'); SwitchShopTab('SubscribeDonateItems', 'SubscribeButton');">
							<Label id="ChestItemText" class="AdsText" text=""/>
						</Panel>
					</Panel>
					<Panel class="ADSContainer"> 
						<Panel id="AdsItem_1" class="ADSImage" onactivate="SwitchTab('ItemsContainer', 'DonateItemsButton'); SwitchShopTab('ChestDonateItems', 'ChestButton');">
							<Label id="AdsItemText" class="AdsText" text=""/>
						</Panel>
					</Panel>
				</Panel>
			</Panel>
			<Panel id="ItemsContainer" class="DonateShopPanelSecond">
				<Panel id="MenuItems" class="MenuItems">
					<!--<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('AllDonateItems', 'AllItemsButton');" id="AllItemsButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_all" />
                    </Panel>-->
					<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('PetsDonateItems', 'PetsButton');" id="PetsButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_pets" />
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('EffectsDonateItems', 'EffectsButton');" id="EffectsButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_particles" />
                    </Panel>
					<!--<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('GemDonateItems', 'GemButton');" id="GemButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_gem" />
                    </Panel>-->
					<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('SubscribeDonateItems', 'SubscribeButton');" id="SubscribeButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_subscribe" />
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('ChestDonateItems', 'ChestButton');" id="ChestButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_chests" />
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('SkinDonateItems', 'SkinButton');" id="SkinButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#skin_chests" />
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('TowerDonateItems', 'TowerButton');" id="TowerButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#tower_chests" />
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('WispDonateItems', 'WispButton');" id="WispButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#wisp_chests" />
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('SoundsDonateItems', 'SoundsButton');" id="SoundsButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_sounds" />
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('LabelDonateItems', 'LabelButton');" id="LabelButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#skin_label" />
                    </Panel>
					<!--<Panel class="ItemsCategoryButton" onactivate="SwitchShopTab('SpraysonateItems', 'SpraysButton');" id="SpraysButton">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_sprays" />
                    </Panel>-->
				</Panel>
				<Panel id="AllDonateItems" class="ItemsPanel"/>
			</Panel>
			<Panel id="InventoryContainer" class="DonateShopInventory">
				<Panel id="MenuInventory" class="MenuInventory">
					<Panel class="ItemsCategoryButton" onactivate="SwitchInventoryShopTab('CouriersPanel', 'CouriersButtonInventory');" id="CouriersButtonInventory">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_pets" /> 
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchInventoryShopTab('EffectsPanel', 'EffectsButtonInventory');" id="EffectsButtonInventory">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_particles" /> 
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchInventoryShopTab('ChestsPanel', 'ChestsButtonInventory');" id="ChestsButtonInventory">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#shop_chests" />
                        <Panel class="ChestCounterPanel" id="ChestCounterPanel">
                            <Label class="ChestCounter" id="ChestCounter" text="0" />
                        </Panel>
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchInventoryShopTab('SkinPanel', 'SkinButtonInventory');" id="SkinButtonInventory">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#skin_chests" /> 
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchInventoryShopTab('TowerPanel', 'TowerButtonInventory');" id="TowerButtonInventory">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#tower_chests" /> 
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchInventoryShopTab('WispPanel', 'WispButtonInventory');" id="WispButtonInventory">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#wisp_chests" /> 
                    </Panel>
					<Panel class="ItemsCategoryButton" onactivate="SwitchInventoryShopTab('LabelPanel', 'LabelButtonInventory');" id="LabelButtonInventory">
                        <Panel class="MenuButtonGlow" />
                        <Label text="#skin_label" /> 
                    </Panel>
				</Panel>
				<Panel id="PlayerItemsContainer" class="PlayerItemsContainer" />
			</Panel>
			<Panel id="GemContainer" class="DonateShopPanelSecond">
				<Panel id="GemPanel" class="PlayerItemsContainer" />
			</Panel>
		</Panel>
		<Button id="ChestOpenPanelMainClosed">
            <Panel class="ChestBG" />
			<Panel id="ChestOpenPanelMain" >
				<Panel class="CloseInfoItem" onactivate="CloseOpenChest();"/>
				<Panel id="ChestBodyInfo" />
			</Panel>
		</Button>
		<Button id="chest_opened_animation" />
		<Button class="info_item_buy" id="info_item_buy">
            <Panel class="item_info_notifications_BG" />
			<Panel id="ItemInfoPanel" >
				<Panel class="InfoItemTop">
					<Panel class="ItemNameAndIcon">
                        <Label text="ItemName" id="ItemNameInfo" class="ItemNameInfoLabel"/>
                        <Panel class="ItemIconLarge" id="ItemIconLarge" />
                    </Panel>
					<Panel class="CloseInfoItem" onactivate="CloseItemInfo();"/>
				</Panel>
				<Panel id="ItemInfoBody" />
			</Panel>
		</Button>
		<Button id="shop_error_panel">
			<Label text="Error" id="shop_error_label"/>
		</Button>
		<Button id="shop_buy_panel">
			<Label text="Buy" id="shop_buy_label"/>
		</Button>
	</Panel>
</root>
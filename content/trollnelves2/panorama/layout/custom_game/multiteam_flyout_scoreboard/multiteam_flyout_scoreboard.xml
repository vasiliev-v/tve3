<root>
    <styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/layout/custom_game/styles/shared_scoreboard_styles.css" />
        <include src="file://{resources}/layout/custom_game/multiteam_flyout_scoreboard/multiteam_flyout_scoreboard.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/layout/custom_game/scripts/shared_scoreboard_updater.js" />
        <include src="file://{resources}/layout/custom_game/multiteam_flyout_scoreboard/multiteam_flyout_scoreboard.js" />
    </scripts>
    <Panel hittest="false" class="FlyoutScoreboardRoot">
  		<Panel id="ChangePanelType">
  			<Panel id="MinType" class="ButtonSetStyle" onactivate="ChangePanelType('Mini');">
                <Label text="1" />
            </Panel>
  			<Panel id="MedType" class="ButtonSetStyle" onactivate="ChangePanelType('Medium');">
                <Label text="2" />
            </Panel>
  			<Panel id="MaxType" class="ButtonSetStyle" onactivate="ChangePanelType('Maximum');">
                <Label text="3" />
            </Panel>
  		</Panel>
		<Panel id="Legend" class="Legend">
			<Panel class="LegendPanel ScoreCol_TeamInfo" />
			<Panel class="LegendPanel ScoreCol_Hero" />
			<Label class="LegendPanel ScoreCol_PlayerDetails ScoreCol_Name" text="Name" />
            <Label class="LegendPanel ScoreCol_Gold" text="G" />
            <Label class="LegendPanel ScoreCol_Lumber" text="L" />
                        <Label class="LegendPanel ScoreCol_Kills" text="#custom_end_screen_legend_kills" />
                        <Label class="LegendPanel ScoreCol_Deaths" text="#custom_end_screen_legend_deaths" />
                        <Label class="LegendPanel ScoreCol_ElfScore" text="Elf" />
                        <Label class="LegendPanel ScoreCol_TrollScore" text="Troll" />
                        <Label class="LegendPanel ScoreCol_Achivement" text="#Stats_Achivement" />
                </Panel>
                <Panel id="TeamsContainer" />
    </Panel>
</root>



<root>
	<scripts>
		<include src="file://{resources}/layout/custom_game/leaderboard/leaderboard.js" />
	</scripts>
	<styles>
		<include src="file://{resources}/layout/custom_game/leaderboard/leaderboard.css" />
	</styles>

	<Panel style="width:100%;height:100%;" hittest="false"> 
		<Panel id="Leaderboard" class="Leaderboard">
            <Panel class="CloseButtonPanel" onactivate="ClosePanel();"/>
            <Label class="HeaderLabel" text="#leaderboard_name" />
            <Label id="SeasonTitle" text="Current season" />

            <!-- Табы сезонов с кнопками прокрутки -->
            <Panel class="SeasonTabsWrapper">
                <Panel class="SeasonScrollBtn Left" hittest="true" onactivate="SeasonScroll(-1)">
                    <Label text="◀"/>
                </Panel>

                <Panel id="SeasonTabs" class="SeasonTabs">
                    <Panel id="SeasonTabsInner" class="SeasonTabsInner" />
                </Panel>

                <Panel class="SeasonScrollBtn Right" hittest="true" onactivate="SeasonScroll(1)">
                    <Label text="▶"/>
                </Panel>
            </Panel>

            <Panel class="LeaderboardPanel">
                <Panel class="LeaderboardColumnsHeader">
                    <Label class="Leaderboard_column_id" text="№" />
                    <Label class="Leaderboard_column_name" text="Name" />
                    <Label class="Leaderboard_column_sum" text="Summary" />
                    <Label class="Leaderboard_column_troll" text="Troll" />
                    <Label class="Leaderboard_column_elves" text="Elves" />
                    <Label class="Leaderboard_column_games" text="Games" />
                </Panel>
                <Panel class="PlayersList" id="PlayersList" />
                <Panel class="LocalPlayer" id="LocalPlayer" />
            </Panel>
		</Panel>
	</Panel>
</root>

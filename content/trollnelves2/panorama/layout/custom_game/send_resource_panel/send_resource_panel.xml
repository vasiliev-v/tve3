<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/layout/custom_game/send_resource_panel/send_resource_panel.css" />
	</styles>
	 <scripts>
        <include src="s2r://panorama/layout/custom_game/scripts/util.js" />
		<include src="s2r://panorama/layout/custom_game/send_resource_panel/send_resource_panel.js" />
	</scripts>  
	<Panel style="width:100%;height:100%;" hittest="false">
        <Panel class="SendResourceMain" id="SendResourceMain">
            <Panel class="SendResourceBG" />
            <Panel class="CloseSwap" onactivate="CloseSendPanel();" />
            <Panel class="ResourceBody">
                <Label class="ResourceLabelHeader" text="Передать ресурсы" />
                <Panel class="PlayersListSwap">
                    <Label class="PlayerName" id="FirstPlayerName" text="Test" />
                    <Panel class="SendIcon" />
                    <Label class="PlayerName" id="SecondPlayerName" text="Test" />
                </Panel>
                <Panel class="SwapBlocks">
                    <Panel class="SwapBlock">
                        <Panel class="IconAndTextEntry">
                            <Panel class="IconCoin" />
                            <Panel class="CoinEntryMain">
                                <TextEntry id="CoinEntry" maxchars="7" placeholder="Введите число"/>
                            </Panel>
                        </Panel>
                        <Panel class="SliderPanel">
                            <Slider class="HorizontalSlider" onvaluechanged="SliderGoldUpdater();" direction="horizontal" id="SliderGold" />
                            <Panel class="ValuesBlock">
                                <Label class="value_1" text="10%" />
                                <Label class="value_2" text="25%" />
                                <Label class="value_3" text="50%" />
                                <Label class="value_4" text="75%" />
                            </Panel>
                        </Panel>
                    </Panel>
                    <Panel class="SwapBlock SecondBlock">
                        <Panel class="IconAndTextEntry">
                            <Panel class="CoinEntryMain">
                                <TextEntry id="LumberEntry" maxchars="7" placeholder="Введите число"/>
                            </Panel>
                            <Panel class="IconLumber" />
                        </Panel>
                        <Panel class="SliderPanel">
                            <Slider class="HorizontalSlider" onvaluechanged="SliderLumberUpdater();" direction="horizontal" id="SliderLumber" />
                            <Panel class="ValuesBlock">
                                <Label class="value_1" text="10%" />
                                <Label class="value_2" text="25%" />
                                <Label class="value_3" text="50%" />
                                <Label class="value_4" text="75%" />
                            </Panel>
                        </Panel>
                    </Panel>
                </Panel>
                <Panel class="SendButtons">
                    <Panel class="SendButton" onactivate="SendResourcePanel_SendResource();">
                        <Label text="Передать" />
                    </Panel>
                    <Panel class="SendAllButton" onactivate="SendResourceAll();">
                        <Label text="Передать Всё" />
                    </Panel>
                </Panel>
            </Panel>    
        </Panel>
	</Panel>
</root>
<root>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/statistics.js" />
	</scripts>

	<styles>
		<include src="file://{resources}/styles/custom_game/statistics.css" />
	</styles>
	<Panel class="StatisticsMain" hittest="false"> 
		<Panel id="StatisticsButton" onactivate="ToggleStatistics();">
			<Panel class="StatisticsButtonIcon" />
			<Label class="StatisticsButtonLabel" text="#Statistics_button" />
		</Panel>
		<Panel id="Statistics">
			<Panel class="StatisticsForExitCheck" hittest="false">
				<Panel class="Menu" >
					<Label class="StatisticsText"	text="#Statistics_name"/>
				</Panel>
				<Panel class="Panels" >
					<Panel id="StatisticsPanel1" class="StatisticsPanel">
					<Panel class="RatingPlayersColumn">
							<Panel class="ColumnInfo">
								<Label class="ColumnInfoLabel" text="#Statistics_2" />
							</Panel>
							<Panel id="PlayersColumnElvesRating" class="RatingPlayers"/>
						</Panel>
						<Panel class="RatingPlayersColumn">
							<Panel class="ColumnInfo">
								<Label class="ColumnInfoLabel" text="#Statistics_1" />
							</Panel>	
							<Panel id="PlayersColumnMainRating" class="RatingPlayers"/>
						</Panel>
						<Panel class="RatingPlayersColumn">
							<Panel class="ColumnInfo">
								<Label class="ColumnInfoLabel" text="#Statistics_3" />
							</Panel>
							<Panel id="PlayersColumnTrollRating" class="RatingPlayers"/>
						</Panel>
						
					</Panel>
				</Panel>
			</Panel>
			<Panel class="CloseStatistics" onactivate="ToggleStatistics();"/>
		</Panel>
	</Panel>
</root>
